<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<TabPane fx:id="parentTabPane" prefHeight="620.0" prefWidth="600.0" style="-fx-background-color: #5a5a5a" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.team2502.timetracker.controllers.MainController">
    <tabs>
        <Tab text="Home">
            <content>
                <AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #5a5a5a;">
                    <children>
                        <Label fx:id="mainLabel" alignment="CENTER" layoutX="96.0" layoutY="75.0" prefWidth="400.0" text="TIME TRACKER" textFill="WHITE">
                            <font>
                                <Font size="48.0" />
                            </font>
                        </Label>
                        <ImageView fx:id="image" fitHeight="175.0" fitWidth="150.0" layoutX="221.0" layoutY="125.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/TalonLogo.png" />
                            </image></ImageView>
                        <Button fx:id="login" layoutX="350.0" layoutY="265.0" mnemonicParsing="false" text="Login" />
                        <Button fx:id="createUser" layoutX="513.0" layoutY="359.0" mnemonicParsing="false" text="New User" />
                        <ComboBox fx:id="dropDown" layoutX="200.0" layoutY="265.0" prefWidth="150.0" />
                        <Label fx:id="hoursLabel" alignment="CENTER" layoutX="246.0" layoutY="299.0" prefHeight="50.0" prefWidth="100.0" text="Hours: 0" textFill="WHITE">
                            <font>
                                <Font size="24.0" />
                            </font></Label>

                    </children>
                </AnchorPane>            </content>
        </Tab>
        <Tab onSelectionChanged="#toLeaderboard" text="Leaderboard">
            <content>
                <!--You can ignore this error - it will bind the controller to leaderBoardController-->
                <fx:include fx:id="leaderBoard" source="leaderBoard.fxml" />
            </content>
        </Tab>
        <Tab text="Settings">
            <content>
                <AnchorPane>
               <children>
                  <Text fill="WHITE" layoutX="230.0" layoutY="299.0" strokeType="OUTSIDE" strokeWidth="0.0" text="There are no settings" />
               </children></AnchorPane>
            </content>

        </Tab>
    </tabs>
</TabPane>
